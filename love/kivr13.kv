<MyLayout>
    BoxLayout:
        orientation: "vertical"
        size: root.width, root.height

        padding: 20
        spacing: 20

        Button: 
            text: "first Button"
        
        RoundedButton:
            text: "second Button"
            pos_hint: {'center_x': 0.5}
            size_hint: (1, 0.3)
            on_press: print("hello world")

<RoundedButton@Button>
    background_color: (0,0,0,0)
    background_normal: ''
    canvas.before:
        Color:
            rgba: (230/255,0/255,0/255,1) 
        RoundedRectangle:
            size: self.size
            pos: self.pos
            radius: [58]
