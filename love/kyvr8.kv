    font_size: 32
    background_normal: ''
    background_color: (230/255,0/255,0/255,1) 

<TextInput>
    background_normal: ''
    background_color: (230/255,0/255,0/255,1) 
<Label>
    font_size: 32
    
      
<MyLayout>
    canvas.before: 
        Color:
            rgba: (0,1,1,1)
        Rectangle:
            size: self.size
            pos: self.pos
    BoxLayout:
        orientation: "vertical"
        size: root.width , root.height

        spacing: 10
        padding: 10

        Label:
            text: "name"
            font_size: 45
            background_color: (30/255,70/255,150/255,0.5)
            canvas.before: 
                Color:
                    rgba: self.background_color
                Rectangle:
                    size: self.size
                    pos: self.pos
            color: (0,1,0,1)
            bold: True
            italic: True
            outline_color: (0,0,1,1)
            outline_width: 2
        TextInput:
            multiline: False

        Label:
            text: "Pizza"
            background_color: (30/255,70/255,150/255,0.5)
            canvas.before: 
                Color:
                    rgba: self.background_color
                Rectangle:
                    size: self.size
                    pos: self.pos
        TextInput:
            multiline: False  
        
        Button:
            text: "Submit"
            background_color: (0/255,200/255,0/255,1) 

