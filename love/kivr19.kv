<MyLayout>
    BoxLayout:
        orientation: 'vertical'
        size: root.width, root.height
    
        Label: 
            text: "pizza"
            font_size: 32
    
        GridLayout:

            cols:2 
            
            Label: 
                text: "meat"
                font_size:20

            CheckBox:
                on_active: root.checkbox_click(self,self.active, "meat")
            
            Label: 
                text: "cheese"
                font_size:20

            CheckBox:
                on_active: root.checkbox_click(self,self.active, "cheese")

            Label: 
                text: "tomato"
                font_size:20

            CheckBox:
                on_active: root.checkbox_click(self,self.active, "tomato")
            
            Label: 
                text: "onion"
                font_size:20

            CheckBox:
                on_active: root.checkbox_click(self,self.active, "onion")
            
        Label:
            id: output_label
            text: ""
            font_size: 32