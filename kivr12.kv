<MyLayout>   
    BoxLayout:
        orientation: "vertical"
        size: root.width, root.height

        TextInput:
            id: calcu_main
            text: "0"
            halign: "right"
            multiline: False
            font_size: 40
            size_hint: (1,0.15)

        GridLayout:
            cols: 4
            rows:5

            Button:
                size_hint: (0.2,0.2)
                font_size: 32
                text: "%"
                background_color:(157/255,157/255,157/255)
                on_press: root.sign("%")

            Button:
                size_hint: (0.2,0.2)
                font_size: 32
                text: "<<"
                background_color:(157/255,157/255,157/255)
                on_press: root.backspace()
            Button:
                id: clear
                size_hint: (0.2,0.2)
                font_size: 32
                text: "C"
                background_color:(157/255,157/255,157/255)
                on_press: root.number()
            Button:
                size_hint: (0.2,0.2)
                font_size: 32
                text: "/"
                background_color:(157/255,157/255,157/255)
                on_press: root.sign("/")
            Button:
                size_hint: (0.2,0.2)
                font_size: 32
                text: "7"
                on_press: root.Butpress(7)
                
            Button:
                size_hint: (0.2,0.2)
                font_size: 32
                text: "8"
                on_press: root.Butpress(8)
            Button:
                size_hint: (0.2,0.2)
                font_size: 32
                text: "9"
                on_press: root.Butpress(9)
            Button:
                size_hint: (0.2,0.2)
                font_size: 32
                text: "*"
                background_color:(157/255,157/255,157/255)
                on_press: root.sign("*")
            Button:
                size_hint: (0.2,0.2)
                font_size: 32
                text: "4"
                on_press: root.Butpress(4)
            Button:
                size_hint: (0.2,0.2)
                font_size: 32
                text: "5"
                on_press: root.Butpress(5)
            Button:
                size_hint: (0.2,0.2)
                font_size: 32
                text: "6"
                on_press: root.Butpress(6)
            Button:
                size_hint: (0.2,0.2)
                font_size: 32
                text: "-"
                background_color:(157/255,157/255,157/255)
                on_press: root.sign("-")
            Button:
                size_hint: (0.2,0.2)
                font_size: 32
                text: "1"
                on_press: root.Butpress(1)
            Button:
                size_hint: (0.2,0.2)
                font_size: 32
                text: "2"
                on_press: root.Butpress(2)
            Button:
                size_hint: (0.2,0.2)
                font_size: 32
                text: "3"
                on_press: root.Butpress(3)
            Button:
                size_hint: (0.2,0.2)
                font_size: 32
                text: "+"
                background_color:(157/255,157/255,157/255)
                on_press: root.sign("+")
            Button:
                size_hint: (0.2,0.2)
                font_size: 32
                text: "+/-"
                on_press: root.Changepos()
            Button:
                size_hint: (0.2,0.2)
                font_size: 32
                text: "0"
                on_press: root.Butpress(0)
            Button:
                size_hint: (0.2,0.2)
                font_size: 32
                text: "."
                on_press: root.dot()
            Button:
                size_hint: (0.2,0.2)
                font_size: 32
                text: "="
                background_color:(157/255,157/255,157/255)
                on_press: root.equal()